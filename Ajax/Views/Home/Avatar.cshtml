
@{
    ViewData["Title"] = "Avatar";
}

<h1>Avatar</h1>
<img id="img1" class="img-thumbnail w-50"/>

@section Scripts
{
    <script>
        const avatar = document.querySelector('#img1');
        (async () => {
            //const url = '@Url.Content("~/api/avatar/4")'
            const url = '@Url.Content("~/api/avatar")?id=4';
            const response = await fetch(url);
            const datas = await response.blob();
            //顯示資料 使用URL.createObjectURL，將blob對象轉換為url
            avatar.src = URL.createObjectURL(datas);
        })()
    </script>
}
